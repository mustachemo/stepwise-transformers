{
  "model": {
    "d_model": 256,
    "n_heads": 8,
    "n_layers": 4,
    "d_ff": 1024,
    "max_seq_len": 128,
    "dropout_rate": 0.1,
    "activation": "relu"
  },
  "training": {
    "batch_size": 32,
    "learning_rate": 1e-4,
    "num_epochs": 50,
    "warmup_steps": 1000,
    "weight_decay": 0.01,
    "label_smoothing": 0.1,
    "gradient_clip_norm": 1.0
  },
  "data": {
    "num_samples": 5000,
    "train_split": 0.8,
    "val_split": 0.1,
    "test_split": 0.1,
    "max_src_len": 64,
    "max_tgt_len": 64
  },
  "tokenizer": {
    "vocab_size": 5000,
    "max_seq_len": 128
  },
  "logging": {
    "log_every": 50,
    "eval_every": 500,
    "save_every": 1000
  }
}
